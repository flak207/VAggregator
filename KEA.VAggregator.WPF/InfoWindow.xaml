<Window x:Class="KEA.VAggregator.WPF.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KEA.VAggregator.WPF"
        Title="Info" Height="300" Width="400" WindowStartupLocation="CenterOwner" Icon="Resources/info_icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtInfo" IsReadOnly="True" Margin="10" VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Hidden" TextWrapping="Wrap"/>

        <Button x:Name="btnRelatedVideos" Grid.Row="1" HorizontalAlignment="Left" Height="25" Margin="10,0,10,10" MinWidth="75" Padding="5,0" Click="btnRelatedVideos_Click">Related Videos</Button>

        <Button x:Name="btnClose" Grid.Row="1" HorizontalAlignment="Right" Height="25" Margin="0,0,10,10" Width="75" Click="btnClose_Click">Close</Button>
    </Grid>
</Window>
