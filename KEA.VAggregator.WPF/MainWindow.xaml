<Window x:Class="KEA.VAggregator.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KEA.VAggregator.WPF"
        Title="VAggregator" Height="450" Width="800" Icon="Resources/vag_icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="headerGird" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="searchInput" Grid.Column="1" Height="25" VerticalAlignment="Center"></TextBox>
            <Button x:Name="searchButton" Grid.Column="2" Margin="5" Height="25" Width="75">Search</Button>
        </Grid>
        <ListBox x:Name="wrapPanel" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="wrapPanel_SelectionChanged">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel  />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <Border Height="200" Width="350" BorderThickness="2" BorderBrush="Black">
                            <Image Height="200" Width="350" Source="{Binding ImageUrl}" />
                        </Border>
                        <TextBlock Margin="0,3" Width="350" FontWeight="Bold" HorizontalAlignment="Stretch" Text="{Binding Name}"
                                   TextAlignment="Center" TextTrimming="CharacterEllipsis" ToolTip="{Binding Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
