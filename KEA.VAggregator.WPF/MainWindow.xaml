<Window x:Class="KEA.VAggregator.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KEA.VAggregator.WPF"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="categoryPanel" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel  />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <Border Height="200" Width="350" BorderThickness="2" BorderBrush="Black">
                            <Image Height="200" Width="350" Source="{Binding ImageUrl}" />
                        </Border>
                        <Label Content="{Binding Text}" HorizontalAlignment="Center"></Label>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
